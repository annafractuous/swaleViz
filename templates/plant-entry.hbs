<div class="plant-archive__entry-info row">
    <div class="col-sm-4">
        <h5 class="plant-archive__entry-heading">
            Plant
        </h5>
        <h1 class="plant-archive__entry-title">
            {{name}}
        </h1>
        <h5 class="plant-archive__entry-heading">
            Medicinal Use
        </h5>
        <div class="plant-archive__entry-text">
            <p>{{{medicinal_use}}}</p>
        </div>
    </div>
    <div class="col-sm-4">
        <h5 class="plant-archive__entry-heading">
            Symbol
        </h5>
        <div class="plant-archive__entry-symbol">
            {{{symbol}}}
        </div>
    </div>
    <div class="col-sm-4">
        <h5 class="plant-archive__entry-heading">
            Political Pairing
        </h5>
        <p class="plant-archive__entry-text">
            {{political_pairing}}
        </p>
        <h5 class="plant-archive__entry-heading">
            Source
        </h5>
        <p class="plant-archive__entry-link">
            {{{source}}}
        </p>
    </div>
</div>
<div class="plant-archive__entry-poem row">
    <div class="col-sm-12">
        <h5 class="plant-archive__entry-heading">
            Poetic Text
        </h5>
    </div>
    <div class="col-sm-12">
        <span class="plant-archive__entry-quote-marks col-sm-3">
            ″
        </span>
        <p class="plant-archive__entry-quote col-sm-6">
            {{poetic_text}}
        </p>
        <span class="plant-archive__entry-quote-marks col-sm-3">
            ″
        </span>
    </div>
</div>
